{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "noEmit": false,
  },
  "exclude": ["node_modules", "cypress"]
}
